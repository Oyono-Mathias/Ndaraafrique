
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ======================
       FONCTIONS D'AIDE
    ====================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Version Robuste: Vérifie l'existence du document avant de lire le rôle.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor'
        && userData.isInstructorApproved == true;
    }

    function isCourseOwner(courseId) {
      let courseData = get(/databases/$(database)/documents/courses/$(courseId)).data;
      return isOwner(courseData.instructorId);
    }
    
    function isEnrolled(courseId) {
      let enrollmentPath = /databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId);
      if (!exists(enrollmentPath)) {
        return false;
      }
      let enrollmentData = get(enrollmentPath).data;
      return !('expiresAt' in enrollmentData) || enrollmentData.expiresAt > request.time;
    }

    /* ======================
       USERS
    ====================== */
    match /users/{userId} {
      allow get: if true; 
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (
        isOwner(userId) &&
        !('role' in request.resource.data) &&
        !('isInstructorApproved' in request.resource.data) &&
        !('status' in request.resource.data)
      );
      allow delete: if isAdmin() || isOwner(userId);

      match /chatHistory/{id}      { allow read, write: if isOwner(userId); }
      match /wishlist/{id}        { allow read, write, delete: if isOwner(userId); }
      match /notifications/{id}   { allow read, write, list: if isOwner(userId); }
      match /activity/{id}        { allow read, create, list: if isOwner(userId); }
      match /subscriptions/{id} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update: if isAdmin();
      }
      match /fcmTokens/{id} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    /* ======================
       COURSES & SUB-COLLECTIONS
    ====================== */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if isApprovedInstructor() || isAdmin();
      allow update, delete: if isCourseOwner(courseId) || isAdmin();

      match /sections/{sectionId} {
        allow read, list: if true;
        allow create, update, delete: if isCourseOwner(courseId) || isAdmin();
        
        match /lectures/{lectureId} {
          allow read, list: if true;
          allow create, update, delete: if isCourseOwner(courseId) || isAdmin();
        }
      }
      
      match /questions/{questionId} {
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow read, list: if true;
        allow update: if isCourseOwner(courseId) || isAdmin();
        allow delete: if isCourseOwner(courseId) || isAdmin() || isOwner(resource.data.studentId);
        
        match /answers/{answerId} {
          allow create: if isSignedIn() && isOwner(request.resource.data.userId);
          allow read, list: if true;
          allow update, delete: if isCourseOwner(courseId) || isAdmin() || isOwner(resource.data.userId);
        }
      }
    }

    /* ======================
       COURSE_PROGRESS
    ====================== */
    match /course_progress/{progressId} {
      allow read, write, delete: if isOwner(resource.data.userId) || isAdmin();
      allow list: if (isSignedIn() && request.query.where.userId == request.auth.uid) || isAdmin();
    }

    /* ======================
       ENROLLMENTS
    ====================== */
    match /enrollments/{enrollmentId} {
      allow create: if isOwner(request.resource.data.studentId) || isAdmin();
      allow read, update: if isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin();
      allow list: if (isSignedIn() && request.query.where.studentId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }
    
    /* ======================
       PAYMENTS
    ====================== */
    match /payments/{paymentId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    /* ======================
       PAYOUTS
    ====================== */
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow read: if isOwner(resource.data.instructorId) || isAdmin();
      allow list, update, delete: if isAdmin();
    }

    /* ======================
       SUPPORT_TICKETS
    ====================== */
    match /support_tickets/{ticketId} {
      allow read, update: if isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin();
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow create: if (isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin()) && isOwner(request.resource.data.senderId);
        allow read, list: if isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin();
      }
    }
    
    /* ======================
       REVIEWS
    ====================== */
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isEnrolled(request.resource.data.courseId) && isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    /* ======================
       RECOMMENDED_COURSES
    ====================== */
    match /recommended_courses/{userId} {
      allow get: if (isSignedIn() && isOwner(userId)) || isAdmin();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
    
    /* ======================
       QUIZZES
    ====================== */
    match /quizzes/{quizId} {
        allow create: if isCourseOwner(request.resource.data.courseId) || isAdmin();
        allow read, update, delete: if isCourseOwner(get(/databases/$(database)/documents/quizzes/$(quizId)).data.courseId) || isAdmin();

        match /questions/{questionId} {
            allow read, list, create, update, delete: if isCourseOwner(get(/databases/$(database)/documents/quizzes/$(quizId)).data.courseId) || isAdmin();
        }
        
        match /attempts/{attemptId} {
            allow create: if isSignedIn() && isOwner(request.resource.data.userId);
            allow read, list: if isCourseOwner(get(/databases/$(database)/documents/quizzes/$(quizId)).data.courseId) || isAdmin();
        }
    }
    
    /* ======================
       RESOURCES
    ====================== */
    match /resources/{resourceId} {
        allow create: if isCourseOwner(request.resource.data.courseId) || isAdmin();
        allow read, list: if isEnrolled(resource.data.courseId) || isCourseOwner(resource.data.courseId) || isAdmin();
        allow update, delete: if isCourseOwner(resource.data.courseId) || isAdmin();
    }
    
    /* ======================
       CHATS
    ====================== */
     match /chats/{chatId} {
      function isChatParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants && (
          (
            getUserData().isProfileComplete == true &&
            request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1]
          ) || 
          isAdmin()
      );
                      
      allow read, update: if isSignedIn() && isChatParticipant();
      allow list: if isSignedIn();

      match /messages/{messageId} {
        allow read, list: if isSignedIn() && isChatParticipant();
        allow create: if isSignedIn() && isChatParticipant() && isOwner(request.resource.data.senderId);
      }
    }

    /* ==================================
       COLLECTIONS: ADMIN & PUBLIC
    ================================== */
    match /admin_grants/{grantId}          { allow read, write: if isAdmin(); }
    match /admin_audit_logs/{logId}        { allow read, list: if isAdmin(); }
    match /security_logs/{logId}           { allow read, list, write: if isAdmin(); }
    match /promoCodes/{codeId}             { allow read, write: if isAdmin(); }
    match /roles/{roleId}                  { allow read, write: if isAdmin(); }
    match /carousel_slides/{id}            { allow read, list: if true; allow write: if isAdmin(); }
    match /faqs/{id}                       { allow read, list: if true; allow write: if isAdmin(); }
    match /settings/global                 { allow read: if true; allow write: if isAdmin(); }
    match /waitlist/{email}                { allow create: if true; }
    match /subscription_plans/{planId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
    match /tracking_events/{eventId} {
        allow read, list: if isAdmin();
    }


    /* ==================================
       RÈGLE FINALE DE SÉCURITÉ
    ================================== */
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

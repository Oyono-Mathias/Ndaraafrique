
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isActive() {
      // Check if user is signed in and their account is not suspended.
      // Defaults to active if 'status' field doesn't exist for backward compatibility.
      let userData = getUserData(request.auth.uid);
      return isSignedIn() && (!('status' in userData) || userData.status == 'active');
    }

    function isAdmin() {
      // An admin must be an active user with the 'admin' role.
      let userData = getUserData(request.auth.uid);
      return isActive() && userData.role == 'admin';
    }
    
    function isApprovedInstructor() {
      // An approved instructor must be an active user with the 'instructor' role and approved.
      let userData = getUserData(request.auth.uid);
      return isActive() && userData.role == 'instructor' && userData.isInstructorApproved == true;
    }
    
    function isProfileComplete() {
        let userData = getUserData(request.auth.uid);
        return userData.isProfileComplete == true;
    }

    // --- Collection: users ---
    match /users/{userId} {
      // A user can always read their own document to check their status. Admins can read any.
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      
      // Anyone can create their own user document upon signing up.
      allow create: if isOwner(userId);
      
      // Admins can update any profile. Active users can update their own, but cannot change protected fields.
      allow update: if isAdmin() || (
        isActive() && isOwner(userId) && 
        !('role' in request.resource.data) && 
        !('isInstructorApproved' in request.resource.data) &&
        !('status' in request.resource.data)
      );
      
      // Admins can delete any user. Active users can delete their own account.
      allow delete: if isAdmin() || (isActive() && isOwner(userId));

      // --- Sub-collections of 'users' ---
      match /chatHistory/{messageId} {
        allow read, write, list: if isActive() && isOwner(userId);
      }
      match /wishlist/{courseId} {
        allow read, write, delete, list: if isActive() && isOwner(userId);
      }
      match /notifications/{notificationId} {
        allow read, write: if isActive() && isOwner(userId);
      }
      match /subscriptions/{subscriptionId} {
        allow read, list: if (isActive() && isOwner(userId)) || isAdmin();
        allow create: if isActive() && isOwner(userId);
        allow update: if isAdmin();
      }
       match /fcmTokens/{tokenId} {
        allow read, delete: if isActive() && isOwner(userId);
        allow create: if isActive() && isOwner(userId) && tokenId == request.resource.id;
      }
      match /activity/{activityId} {
        allow read, list: if isActive() && isOwner(userId);
        allow create: if isActive() && isOwner(request.resource.data.userId); // User can log their own activities
        allow update, delete: if false; // Activities are immutable from client
      }
    }
    
    // --- Collection: courses ---
    match /courses/{courseId} {
        allow get: if resource.data.status == 'Published' || (isActive() && (isOwner(resource.data.instructorId) || isAdmin()));
        allow list: if true;
        allow create: if isApprovedInstructor() || isAdmin();
        allow update, delete: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
        
        match /sections/{sectionId} {
          allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published' || (isActive() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
          allow create, update, delete: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
          
          match /lectures/{lectureId} {
            allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published' || (isActive() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
            allow create, update, delete: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
          }
        }
        
        match /assignments/{assignmentId} {
            allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published' || (isActive() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
            allow create, update, delete: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();

            match /submissions/{submissionId} {
                allow read: if (isActive() && isOwner(resource.data.userId)) || isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin();
                allow list: if isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin();
                allow create: if isActive() && isOwner(request.resource.data.userId);
                allow update: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
                allow delete: if isAdmin();
            }
        }
    }

     // --- Collection: reviews ---
    match /reviews/{reviewId} {
      allow read, list: if true;
      allow create: if isActive() && isOwner(request.resource.data.userId);
      allow update, delete: if (isActive() && isOwner(request.resource.data.userId)) || isAdmin();
    }

    // --- Collection: resources ---
    match /resources/{resourceId} {
        allow read, list: if true;
        allow create, update, delete: if (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(request.resource.data.courseId)).data.instructorId)) || isAdmin();
    }
    
    // --- Collection: enrollments ---
    match /enrollments/{enrollmentId} {
      allow get: if resource.data.progress == 100;
      allow list: if isActive();
      allow update: if (isActive() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId))) || isAdmin();
      allow create: if isActive() && isOwner(request.resource.data.studentId);
      allow delete: if isAdmin();
    }

    // --- Collection: course_progress ---
    match /course_progress/{progressId} {
      allow get, list: if isActive() && isOwner(resource.data.userId);
      allow create, update: if isActive() && request.resource.data.userId == request.auth.uid;
      allow delete: if (isActive() && isOwner(resource.data.userId)) || isAdmin();
    }
    
    // --- Collection: payments ---
    match /payments/{paymentId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list, create, update, delete: if isAdmin();
    }
    
    // --- Collection: payouts ---
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow read: if (isActive() && isOwner(resource.data.instructorId)) || isAdmin();
      allow list, update, delete: if isAdmin();
    }

    // --- Collection: support_tickets ---
    match /support_tickets/{ticketId} {
      function isTicketParticipant() {
        return request.auth.uid == resource.data.userId || request.auth.uid == resource.data.instructorId;
      }
      
      allow get: if isActive() && (isTicketParticipant() || isAdmin());
      allow update: if isActive() && (isTicketParticipant() || isAdmin());

      match /messages/{messageId} {
        allow list, read: if isActive() && (isTicketParticipant() || isAdmin());
        allow create: if isActive() && (isTicketParticipant() || isAdmin()) && isOwner(request.resource.data.senderId);
      }
    }
    
    match /support_tickets/{document=**} {
      allow list: if isActive();
      allow create: if isActive() && isOwner(request.resource.data.userId);
    }
    
    // --- Collection: promoCodes ---
    match /promoCodes/{codeId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // --- Collection: carousel_slides ---
    match /carousel_slides/{slideId} {
        allow read, list: if true;
        allow create, update, delete: if isAdmin();
    }

    // --- Collection: subscription_plans ---
    match /subscription_plans/{planId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
    
    // --- Collection: chats ---
    match /chats/{chatId} {
      function isChatParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      allow create: if isActive() 
                      && isProfileComplete()
                      && request.auth.uid in request.resource.data.participants
                      && request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1];
                      
      allow read, update: if isActive() && isChatParticipant();
      allow list: if isActive() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, list: if isActive() && isChatParticipant();
        allow create: if isActive() && isChatParticipant() && isOwner(request.resource.data.senderId);
      }
    }
    
    // --- Collection: security_logs ---
    match /security_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Backend only
    }

    // --- Collection: faqs ---
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
      allow list: if true;
    }
    
    // --- Collection: settings ---
    match /settings/global {
      allow read: if true;
      allow write: if isAdmin();
    }
    
     // --- Collection: waitlist ---
    match /waitlist/{email} {
        allow create: if true;
        allow read, update, delete: if false;
    }
    
    // --- Collection: recommended_courses ---
    match /recommended_courses/{userId} {
      allow read: if isActive() && isOwner(userId);
      allow write: if false; // Backend only
    }


    // --- Règle par défaut ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

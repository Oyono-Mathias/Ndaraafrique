
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ======================
       HELPERS (FONCTIONS) - SÉCURISÉS
    ====================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Vérifie si l'utilisateur est admin (SÉCURISÉ : ne plante pas si non connecté)
    function isAdmin() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && getUserData(request.auth.uid).role == 'admin';
    }

    // Vérifie si l'instructeur est approuvé
    function isApprovedInstructor() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && getUserData(request.auth.uid).role == 'instructor' 
        && getUserData(request.auth.uid).isInstructorApproved == true;
    }

    // Vérifie si l'utilisateur est le créateur du cours
    function isCourseOwner(courseId) {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/courses/$(courseId))
        && request.auth.uid == get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId;
    }

    // Vérifie l'inscription
    function isStudentEnrolled(courseId) {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId));
    }

    /* ======================
       UTILISATEURS (USERS)
    ====================== */

    match /users/{userId} {
      // Lecture publique pour voir le nom/photo du formateur sans erreur
      allow read: if true; 
      allow create: if true; 
      allow update: if isOwner(userId) || isAdmin();

      match /chatHistory/{id} { allow read, write: if isOwner(userId); }
      match /wishlist/{id} { allow read, write: if isOwner(userId); }
      match /notifications/{id} { allow read, write: if isOwner(userId); }
    }

    /* ======================
       COURS & CONTENU (FORMAAFRIQUE)
    ====================== */

    match /courses/{courseId} {
      // Indispensable pour que use-doc.tsx ne crash pas sur la page de détails
      allow get: if true;
      allow list: if true; 
      
      allow create: if isApprovedInstructor() || isAdmin();
      allow update: if isAdmin() || isCourseOwner(courseId);

      match /sections/{sectionId} {
        allow read: if true;
        allow write: if isAdmin() || isCourseOwner(courseId);

        match /lectures/{lectureId} {
          allow read: if true;
          allow write: if isAdmin() || isCourseOwner(courseId);
        }
      }

      match /assignments/{assignmentId} {
        allow read: if isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin();
        allow write: if isAdmin() || isCourseOwner(courseId);
        
        match /submissions/{submissionId} {
          allow get: if isCourseOwner(courseId) || isOwner(resource.data.userId);
          allow list: if isCourseOwner(courseId) || isAdmin();
          allow create: if isStudentEnrolled(courseId) && isSignedIn();
        }
      }

      match /quizzes/{quizId} {
        allow read: if isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin();
        allow write: if isAdmin() || isCourseOwner(courseId);
        
        match /attempts/{attemptId} {
          allow get: if isCourseOwner(courseId) || isOwner(resource.data.userId);
          allow create: if isStudentEnrolled(courseId) && isSignedIn();
        }
      }
    }
    
    match /questions/{questionId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.studentId);
        allow update: if isOwner(resource.data.instructorId) && request.resource.data.status == 'answered';
    }


    /* ======================
       INSCRIPTIONS & PAIEMENTS
    ====================== */

    match /enrollments/{id} {
      allow read: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isAdmin() || isOwner(resource.data.studentId) || isOwner(resource.data.instructorId);
    }

    match /payments/{id} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow create: if isSignedIn();
      allow list, update: if isAdmin();
    }

    match /payouts/{id} {
      allow read, create: if isAdmin() || isOwner(resource.data.instructorId);
    }

    /* ======================
       AUTRES COLLECTIONS
    ====================== */
    
    match /recommended_courses/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /reviews/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || isOwner(resource.data.userId);
    }

    match /promoCodes/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /support_tickets/{id} {
      allow read, create: if isSignedIn();
      allow update: if isAdmin() || isOwner(resource.data.userId);
      
      match /messages/{msgId} {
        allow read, write: if isSignedIn();
      }
    }

    match /resources/{id} {
      allow read: if isSignedIn();
      allow create: if isApprovedInstructor();
      allow update, delete: if isAdmin() || isCourseOwner(resource.data.courseId);
    }

    match /chats/{id} {
      allow read, write: if isSignedIn() && (request.auth.uid in resource.data.participants);
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }

    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ======================
       SÉCURITÉ PAR DÉFAUT
    ====================== */

    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}

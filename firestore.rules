
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }
    
    function isApprovedInstructor() {
      let userData = getUserData();
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }
    
    // --- Collection Rules ---

    // USERS: Only admins can list users. Users can read/update their own data.
    match /users/{userId} {
      allow list: if isAdmin();
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
    }
    
    // COURSES: Everyone can read published courses. Only instructors can create/update drafts. Admins can do anything.
    match /courses/{courseId} {
        allow get: if true;
        allow list: if true;
        allow create: if isApprovedInstructor();
        allow update: if isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin();
        allow delete: if isAdmin();
    }
    
    // ENROLLMENTS: Users can create/read their own enrollments. Admins can read all.
    match /enrollments/{enrollmentId} {
      allow create: if isOwner(request.resource.data.studentId);
      allow read, update: if isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin();
      allow list: if isAdmin();
    }
    
    // PAYMENTS: Only admins can access payment records.
    match /payments/{paymentId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    
    // PAYOUTS: Only admins can manage payout requests.
    match /payouts/{payoutId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // SUPPORT_TICKETS: Users can interact with their own tickets. Admins can manage all.
    match /support_tickets/{ticketId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update: if isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin();
      allow list, delete: if isAdmin();
      match /messages/{messageId} {
        allow read, create: if isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin();
      }
    }
    
     // CHATS: Users can only access chats they are a part of.
    match /chats/{chatId} {
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // Default deny for any other collection not explicitly matched
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

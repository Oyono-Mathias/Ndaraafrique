
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      // Allow reading user data only if signed in.
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      // Check if the user is signed in and their role in the DB is 'admin'.
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }
    
    function isCourseOwner(courseId) {
        return isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId);
    }
    
    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }
    
    function isStudentEnrolled(courseId) {
        return exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId));
    }
    
    // --- Règles pour 'courses' ---
    match /courses/{courseId} {
      // Tout le monde peut lire un cours individuel
      allow get: if true;
      
      // La liste est autorisée si:
      // 1. C'est une requête de base (pas de filtre complexe)
      // 2. OU si l'utilisateur est un admin (pour les requêtes de modération/filtrage)
      allow list: if request.query.keys().size() == 0 || isAdmin();
      
      allow create: if isSignedIn() && isApprovedInstructor();
      allow update: if isAdmin() || (isCourseOwner(courseId) && request.resource.data.status != 'Published');
      
      // --- Règles pour les sous-collections ---
      match /sections/{sectionId} {
        allow read: if true;
        allow write: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());

        match /lectures/{lectureId} {
          allow read: if true;
          allow create: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
          allow update, delete: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
        }
      }
      
      match /assignments/{assignmentId} {
        allow read: if isSignedIn() && (isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin());
        allow create, update, delete: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
        
        match /submissions/{submissionId} {
            allow get: if isSignedIn() && (isCourseOwner(courseId) || isOwner(resource.data.userId));
            allow list: if isSignedIn() && isCourseOwner(courseId);
            allow create: if isSignedIn() && isStudentEnrolled(courseId) && isOwner(request.resource.data.userId);
            allow update: if isSignedIn() && isCourseOwner(courseId);
        }
      }

      match /quizzes/{quizId} {
        allow read: if isSignedIn() && (isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin());
        allow create, update, delete: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
        
        match /attempts/{attemptId} {
            allow get: if isSignedIn() && (isCourseOwner(courseId) || isOwner(resource.data.userId));
            allow list: if isSignedIn() && isCourseOwner(courseId);
            allow create: if isSignedIn() && isStudentEnrolled(courseId) && isOwner(request.resource.data.userId);
        }
      }
    }

    // --- Règles pour 'users' ---
    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if isSignedIn();
      allow create: if request.auth != null && request.auth.uid == userId;
      
      allow update: if isAdmin() || (isOwner(userId) && !(request.resource.data.keys().hasAny(['role', 'isInstructorApproved'])));

      match /chatHistory/{messageId} {
        allow read, write: if isOwner(userId);
      }
      
      match /wishlist/{courseId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      match /notifications/{notificationId} {
        allow read, write, list: if isOwner(userId);
      }
    }

    // --- Règles pour 'enrollments' ---
    match /enrollments/{enrollmentId} {
        allow read: if isSignedIn() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin());
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow list: if isSignedIn() && 
                    (request.query.where.size() > 0 &&
                     (('instructorId' in request.query.where && request.query.where.instructorId == request.auth.uid) ||
                      ('studentId' in request.query.where && request.query.where.studentId == request.auth.uid)));
        allow update: if isSignedIn() && (
          isOwner(resource.data.studentId) || 
          isOwner(resource.data.instructorId) ||
          isAdmin()
        );
        allow delete: if isAdmin() || isOwner(resource.data.studentId);
    }

    // --- Règles pour 'reviews' ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.userId) && isStudentEnrolled(request.resource.data.courseId);
      allow update, delete: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId)); 
      allow list: if isSignedIn() && 
                   request.query.where.size() > 0 && (
                     ('instructorId' in request.query.where && request.query.where.instructorId == request.auth.uid) ||
                     ('courseId' in request.query.where)
                   );
    }

    // --- Règles pour 'payments' ---
    match /payments/{paymentId} {
        allow get: if isAdmin() || isOwner(resource.data.userId);
        allow list: if isAdmin();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
    
    // --- Règles pour 'payouts' ---
    match /payouts/{payoutId} {
      allow create: if isSignedIn() && isApprovedInstructor() && request.resource.data.instructorId == request.auth.uid;
      allow read: if (isSignedIn() && isOwner(resource.data.instructorId)) || isAdmin();
      allow list: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // --- Règles pour 'support_tickets' ---
    match /support_tickets/{ticketId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && (
          isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) ||
          isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin()
        );
      }
    }
    
    // --- Règles pour les ressources ---
    match /resources/{resourceId} {
      allow create: if isApprovedInstructor() && isCourseOwner(request.resource.data.courseId);
      allow read: if (isStudentEnrolled(resource.data.courseId)) || isCourseOwner(resource.data.courseId) || isAdmin();
      allow update, delete: if isCourseOwner(resource.data.courseId) || isAdmin();
      allow list: if isSignedIn() && request.query.keys().hasAny(['courseId']);
    }

    // --- Règles pour la FAQ ---
    match /faqs/{faqId} {
        allow read: if true;
        allow list: if true;
        allow create, update, delete: if isAdmin();
    }

    // --- Règles pour le carrousel ---
    match /carousel_slides/{slideId} {
        allow read: if true;
        allow list: if true;
        allow create, update, delete: if isAdmin();
    }

    // --- Règles pour 'chats' ---
    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
    
     // --- Règles pour la configuration globale ---
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

    

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ======================
       HELPERS
    ====================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isActive() {
      let userData = getUserData(request.auth.uid);
      return isSignedIn() && (!('status' in userData) || userData.status == 'active');
    }

    function isAdmin() {
      let userData = getUserData(request.auth.uid);
      return isActive() && userData.role == 'admin';
    }

    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return isActive()
        && userData.role == 'instructor'
        && userData.isInstructorApproved == true;
    }

    function isProfileComplete() {
      let userData = getUserData(request.auth.uid);
      return userData.isProfileComplete == true;
    }

    /* ======================
       USERS
    ====================== */

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);

      allow update: if isAdmin() || (
        isActive() && isOwner(userId)
        && !('role' in request.resource.data)
        && !('status' in request.resource.data)
        && !('isInstructorApproved' in request.resource.data)
      );

      allow delete: if isAdmin() || (isActive() && isOwner(userId));

      match /chatHistory/{id} {
        allow read, write, list: if isActive() && isOwner(userId);
      }

      match /wishlist/{id} {
        allow read, write, delete, list: if isActive() && isOwner(userId);
      }

      match /notifications/{id} {
        allow read, write: if isActive() && isOwner(userId);
      }

      match /subscriptions/{id} {
        allow read, list: if (isActive() && isOwner(userId)) || isAdmin();
        allow create: if isActive() && isOwner(userId);
        allow update: if isAdmin();
      }

      match /fcmTokens/{tokenId} {
        allow create: if isActive() && isOwner(userId);
        allow read, delete: if isActive() && isOwner(userId);
      }

      match /activity/{activityId} {
        allow read, list: if isActive() && isOwner(userId);
        allow create: if isActive() && request.resource.data.userId == request.auth.uid;
      }
    }

    /* ======================
       COURSES
    ====================== */

    match /courses/{courseId} {
      allow get: if resource.data.status == 'Published'
        || (isActive() && (isOwner(resource.data.instructorId) || isAdmin()));

      allow list: if true;
      allow create: if isApprovedInstructor() || isAdmin();

      allow update, delete: if isAdmin()
        || (isActive() && isOwner(resource.data.instructorId));

      match /sections/{sectionId} {
        allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published'
          || (isActive() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));

        allow create, update, delete: if isAdmin()
          || (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId));

        match /lectures/{lectureId} {
          allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published'
            || (isActive() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));

          allow create, update, delete: if isAdmin()
            || (isActive() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId));
        }
      }
    }

    /* ======================
       COURSE PROGRESS
    ====================== */

    match /course_progress/{progressId} {
      // Students can read their own progress docs. For a `list` query, the query
      // MUST include a `where('userId', '==', request.auth.uid)` clause.
      allow read: if (isActive() && resource.data.userId == request.auth.uid) || isAdmin();
      
      // A student can only create or update their own progress.
      allow create, update: if isActive() && request.resource.data.userId == request.auth.uid;
      
      // A student can delete their own progress, or an admin can.
      allow delete: if isActive() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    /* ======================
       ENROLLMENTS
    ====================== */

    match /enrollments/{id} {
      // Students can list/read their own enrollments. Admins can read all.
      // For `list` operations, queries from non-admins MUST be constrained with `where('studentId', '==', request.auth.uid)`.
      allow read: if (isActive() && isOwner(resource.data.studentId)) || isAdmin();
      allow create: if isActive() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAdmin()
        || (isActive() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId)));
    }


    /* ======================
       SUPPORT
    ====================== */

    match /support_tickets/{ticketId} {

      function isParticipant() {
        return request.auth.uid == resource.data.userId
          || request.auth.uid == resource.data.instructorId;
      }

      // Participants and admins can read/update tickets.
      // List queries must be constrained by userId or instructorId for non-admins.
      allow read, update: if isActive() && (isParticipant() || isAdmin());
      allow list: if isActive(); // Kept for simplicity, but queries must be constrained
      allow create: if isActive() && request.resource.data.userId == request.auth.uid;

      match /messages/{messageId} {
        allow read, list: if isActive() && (isParticipant() || isAdmin());
        allow create: if isActive() && isOwner(request.resource.data.senderId)
          && (isParticipant() || isAdmin());
      }
    }
    
    /* ======================
       PAYOUTS
    ====================== */
    
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      // Instructors can read their own payouts, admins can read all.
      // `list` queries must be constrained by `where('instructorId', '==', request.auth.uid)` for non-admins.
      allow read: if (isActive() && isOwner(resource.data.instructorId)) || isAdmin();
      allow update, delete: if isAdmin();
    }


    /* ======================
       PUBLIC & ADMIN
    ====================== */

    match /carousel_slides/{id} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /faqs/{id} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /settings/global {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /waitlist/{email} {
      allow create: if true;
    }
    
    match /promoCodes/{codeId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    match /subscription_plans/{planId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
    
    match /chats/{chatId} {
      function isChatParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      allow create: if isActive() 
                      && isProfileComplete()
                      && request.auth.uid in request.resource.data.participants
                      && request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1];
                      
      allow read, update: if isActive() && isChatParticipant();
      allow list: if isActive(); // `list` is secured by the client query filtering `where('participants', 'array-contains', uid)`

      match /messages/{messageId} {
        allow read, list: if isActive() && isChatParticipant();
        allow create: if isActive() && isChatParticipant() && isOwner(request.resource.data.senderId);
      }
    }


    /* ======================
       DEFAULT DENY
    ====================== */

    match /{path=**} {
      allow read, write: if false;
    }
  }
}

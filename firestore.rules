rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      // Utilisation de getAfter pour s'assurer que les données sont lues même pendant une création
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      // Vérification robuste du rôle admin dans Firestore
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isCourseOwner(courseId) {
        return isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId);
    }
    
    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }
    
    function isStudentEnrolled(courseId) {
        return exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId));
    }

    // --- RÈGLES UTILISATEURS ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      
      // Un utilisateur ne peut pas modifier son propre rôle ou ses permissions
      allow update: if isAdmin() || (
        isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isInstructorApproved', 'permissions', 'status', 'email', 'uid'])
      );

      match /chatHistory/{messageId} {
        allow read, write: if isOwner(userId);
      }
      match /wishlist/{courseId} {
        allow read, write, delete: if isOwner(userId);
      }
      match /notifications/{notificationId} {
        allow read, write, list: if isOwner(userId);
      }
      match /activity/{activityId} {
        allow read, list: if isOwner(userId); 
      }
    }

    // --- RÈGLES COURS ---
    match /courses/{courseId} {
      allow get: if true;
      allow list: if true; 
      allow create: if isSignedIn() && isApprovedInstructor();
      allow update: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
      
       match /sections/{sectionId} {
        allow read: if true;
        allow write: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
        match /lectures/{lectureId} {
          allow read: if true;
          allow write: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
        }
      }
    }

    // --- RÈGLES PAIEMENTS ---
    match /payments/{paymentId} {
      // Accès total pour les admins, accès restreint pour les proprios
      allow get: if isAdmin() 
                 || isOwner(resource.data.userId) 
                 || isOwner(resource.data.instructorId);
      
      allow list: if isAdmin() 
                 || (isSignedIn() && ('instructorId' in request.query.where && request.query.where.instructorId == request.auth.uid))
                 || (isSignedIn() && ('userId' in request.query.where && request.query.where.userId == request.auth.uid));
                    
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }

    // --- RÈGLES INSCRIPTIONS ---
    match /enrollments/{enrollmentId} {
        allow get: if isSignedIn() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin()); 
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow list: if isAdmin() || (isSignedIn() && (
             ('instructorId' in request.query.where && request.query.where.instructorId == request.auth.uid) ||
             ('studentId' in request.query.where && request.query.where.studentId == request.auth.uid)
        ));
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    // --- AUTRES COLLECTIONS ---
    match /support_tickets/{ticketId} {
      allow read, create: if isSignedIn();
      allow update, delete: if (isSignedIn() && isOwner(resource.data.userId)) || isAdmin();
    }

    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
    }
    
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /promoCodes/{codeId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /security_logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /admin_audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
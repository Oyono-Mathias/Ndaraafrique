
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }

    function isCourseOwner(courseId) {
      let course = get(/databases/$(database)/documents/courses/$(courseId));
      return isSignedIn() && course.data.instructorId == request.auth.uid;
    }
    
    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }

    function isStudentEnrolled(courseId) {
      return exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId));
    }
    
    // Function to check if the user has completed their profile
    function isProfileComplete() {
        let userData = getUserData(request.auth.uid);
        return userData.username != null && userData.careerGoals.interestDomain != null;
    }

    // --- User Collection Rules ---
    match /users/{userId} {
      allow list: if isAdmin();
      
      // A user can read their own profile completely.
      // Admins and instructors can read anyone's profile.
      allow get: if isOwner(userId) || isAdmin() || getUserData(request.auth.uid).role == 'instructor';

      // Anyone signed in can read a limited "public" profile.
      // This is a conceptual rule; Firestore doesn't enforce field-level reads.
      // The application code must be responsible for fetching only public fields like 'username'.
      
      allow create: if isOwner(userId);
      
      // Users can update their own profile, but cannot change their role, approval status, or private info.
      allow update: if isOwner(userId) && !(
        'role' in request.resource.data || 
        'isInstructorApproved' in request.resource.data
      );
      
      allow delete: if isAdmin();

      // Subcollections
      match /chatHistory/{messageId} {
        allow read, write: if isOwner(userId);
      }
      match /wishlist/{courseId} {
        allow read, write, delete: if isOwner(userId);
      }
      match /notifications/{notificationId} {
        allow read, write, list: if isOwner(userId);
      }
    }

    // --- Chat Collection Rules ---
    match /chats/{chatId} {
        // Chat document data
        let chatData = resource.data;
        // Requesting user's data
        let requesterData = getUserData(request.auth.uid);
        
        // A user can create a chat if:
        // 1. They are signed in AND have a complete profile.
        // 2. They are part of the chat they are trying to create.
        // 3. The categories of both participants are identical.
        allow create: if isSignedIn() && isProfileComplete()
                        && request.auth.uid in request.resource.data.participants
                        && request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1];

        // A user can read or update a chat (e.g., lastMessage) if they are a participant.
        allow read, update: if isSignedIn() && request.auth.uid in chatData.participants;

        // --- Messages Subcollection ---
        match /messages/{messageId} {
            // Allow reading/writing messages only if the user is a participant in the parent chat.
            allow read, write: if isSignedIn() && request.auth.uid in chatData.participants;
        }
    }

    // --- Course Collection Rules ---
    match /courses/{courseId} {
      allow get: if true;
      allow list: if isSignedIn() || isAdmin();
      allow create: if isApprovedInstructor();
      allow update: if isAdmin() || isCourseOwner(courseId);

      // Subcollections
      match /sections/{sectionId} {
        allow read: if true;
        allow write: if isCourseOwner(courseId) || isAdmin();
        match /lectures/{lectureId} {
          allow read: if true;
          allow write: if isCourseOwner(courseId) || isAdmin();
        }
      }
      match /assignments/{assignmentId} {
        allow read: if isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin();
        allow write: if isCourseOwner(courseId) || isAdmin();
        match /submissions/{submissionId} {
            allow read: if isOwner(resource.data.userId) || isCourseOwner(courseId) || isAdmin();
            allow write: if isOwner(request.resource.data.userId) || isCourseOwner(courseId);
        }
      }
      match /quizzes/{quizId} {
        allow read: if isStudentEnrolled(courseId) || isCourseOwner(courseId) || isAdmin();
        allow write: if isCourseOwner(courseId) || isAdmin();
        match /attempts/{attemptId} {
            allow read: if isOwner(resource.data.userId) || isCourseOwner(courseId) || isAdmin();
            allow create: if isStudentEnrolled(courseId) && isOwner(request.resource.data.userId);
        }
      }
    }
    
    // --- Other Collections ---
    match /enrollments/{enrollmentId} {
        allow read, update: if isSignedIn() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin());
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow list: if isSignedIn() && request.query.keys().hasAny(['studentId', 'instructorId']);
        allow delete: if isAdmin() || isOwner(resource.data.studentId);
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.userId) && isStudentEnrolled(request.resource.data.courseId);
      allow update, delete: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId)); 
      allow list: if isSignedIn() && request.query.keys().hasAny(['courseId', 'instructorId']);
    }

    match /payments/{paymentId} {
        allow get: if isAdmin() || isOwner(resource.data.userId);
        allow list: if isAdmin();
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update, delete: if isAdmin();
    }
    
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow read: if isOwner(resource.data.instructorId) || isAdmin();
      allow list: if isAdmin();
      allow update, delete: if isAdmin();
    }

    match /support_tickets/{ticketId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin());
      }
    }
    
    match /resources/{resourceId} {
      allow create: if isApprovedInstructor() && isCourseOwner(request.resource.data.courseId);
      allow read: if (isStudentEnrolled(resource.data.courseId)) || isCourseOwner(resource.data.courseId) || isAdmin();
      allow update, delete: if isCourseOwner(resource.data.courseId) || isAdmin();
      allow list: if isSignedIn() && request.query.keys().hasAny(['courseId']);
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

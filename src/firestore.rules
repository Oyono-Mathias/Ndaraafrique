
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ==================================
       FONCTIONS D'AIDE (HELPERS)
    ================================== */

    // L'utilisateur est-il authentifié ?
    function isSignedIn() {
      return request.auth != null;
    }

    // L'utilisateur est-il le propriétaire du document/de la ressource ?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Récupère les données de l'utilisateur depuis la collection /users
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // L'utilisateur est-il un administrateur ?
    function isAdmin() {
      // isSignedin() est implicite car getUserData() échouerait pour un non-connecté
      return getUserData().role == 'admin';
    }

    // L'utilisateur est-il un instructeur approuvé ?
    function isApprovedInstructor() {
      let userData = getUserData();
      return userData.role == 'instructor'
        && userData.isInstructorApproved == true;
    }

    // L'utilisateur est-il le propriétaire du cours ?
    function isCourseOwner(courseId) {
      let courseData = get(/databases/$(database)/documents/courses/$(courseId)).data;
      return isOwner(courseData.instructorId);
    }
    
    // L'utilisateur est-il inscrit au cours ?
    function isEnrolled(courseId) {
      let enrollmentPath = /databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId);
      if (!exists(enrollmentPath)) {
        return false;
      }
      let enrollmentData = get(enrollmentPath).data;
      // Autorise si pas d'expiration OU si l'expiration est dans le futur.
      return !('expiresAt' in enrollmentData) || enrollmentData.expiresAt > request.time;
    }

    /* ==================================
       COLLECTION: USERS
    ================================== */
    match /users/{userId} {
      // Lecture publique pour les profils (instructeurs, certificats)
      allow get: if true;
      // Seul un admin peut lister tous les utilisateurs
      allow list: if isAdmin();
      // Un utilisateur peut créer son propre document lors de l'inscription
      allow create: if isOwner(userId);
      // Un utilisateur peut modifier son propre profil, mais pas les champs critiques.
      // L'admin peut tout modifier.
      allow update: if isAdmin() || (
        isOwner(userId) &&
        !('role' in request.resource.data) &&
        !('isInstructorApproved' in request.resource.data) &&
        !('status' in request.resource.data)
      );
      // Un utilisateur peut supprimer son propre compte. L'admin aussi.
      allow delete: if isAdmin() || isOwner(userId);
    }

    /* ==================================
       COLLECTION: COURSES & SOUS-COLLECTIONS
    ================================== */
    match /courses/{courseId} {
      // Tout le monde peut voir les cours
      allow get, list: if true;
      // Seuls les instructeurs approuvés ou les admins peuvent créer des cours
      allow create: if isApprovedInstructor() || isAdmin();
      // Seul le propriétaire du cours ou un admin peut le modifier/supprimer
      allow update, delete: if isCourseOwner(courseId) || isAdmin();

      // Sections et leçons suivent les permissions du cours parent
      match /sections/{sectionId} {
        allow read, list: if true;
        allow create, update, delete: if isCourseOwner(courseId) || isAdmin();
        
        match /lectures/{lectureId} {
          allow read, list: if true;
          allow create, update, delete: if isCourseOwner(courseId) || isAdmin();
        }
      }
    }
    
    /* ==================================
       COLLECTION: COURSE_PROGRESS
    ================================== */
    match /course_progress/{progressId} {
      // L'utilisateur ne peut accéder qu'à sa propre progression. L'admin peut tout voir.
      allow read, write, delete: if isOwner(resource.data.userId) || isAdmin();
      // Le listage est autorisé seulement si la requête est filtrée par l'ID de l'utilisateur, ou si c'est un admin.
      allow list: if (isSignedIn() && request.query.where.userId == request.auth.uid) || isAdmin();
    }

    /* ==================================
       COLLECTION: ENROLLMENTS
    ================================== */
    match /enrollments/{enrollmentId} {
      // L'étudiant peut s'inscrire lui-même.
      allow create: if isOwner(request.resource.data.studentId) || isAdmin();
      // L'étudiant et l'instructeur concerné peuvent voir l'inscription.
      allow read, update: if isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin();
      allow list: if (isSignedIn() && request.query.where.studentId == request.auth.uid) || isAdmin();
      // Seul l'admin peut supprimer une inscription (ex: remboursement).
      allow delete: if isAdmin();
    }
    
    /* ==================================
       COLLECTION: PAYMENTS
    ================================== */
    match /payments/{paymentId} {
      // L'étudiant et l'instructeur concernés peuvent lire le paiement.
      allow get: if isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin();
      // Listage autorisé pour les admins, et pour les utilisateurs qui filtrent par leur ID.
      allow list: if isAdmin() || (isSignedIn() && request.query.where.userId == request.auth.uid);
      // L'utilisateur peut créer un paiement pour lui-même.
      allow create: if isOwner(request.resource.data.userId);
      // Seuls les admins peuvent modifier/supprimer (ex: remboursement).
      allow update, delete: if isAdmin();
    }

    /* ==================================
       COLLECTION: SUPPORT_TICKETS
    ================================== */
    match /support_tickets/{ticketId} {
      // Seuls les participants du ticket ou un admin peuvent le lire.
      allow read, update: if isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin();
      // Un utilisateur connecté peut créer son propre ticket.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      // Seul un admin peut lister tous les tickets.
      allow list: if isAdmin();

      // Messages à l'intérieur d'un ticket.
      match /messages/{messageId} {
        allow create: if (isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin()) && isOwner(request.resource.data.senderId);
        allow read, list: if isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || isAdmin();
      }
    }
    
    /* ==================================
       COLLECTION: REVIEWS
    ================================== */
    match /reviews/{reviewId} {
      // Tout le monde peut lire les avis
      allow get, list: if true;
      // Seul un étudiant inscrit au cours peut laisser un avis
      allow create: if isEnrolled(request.resource.data.courseId) && isOwner(request.resource.data.userId);
      // Seul l'auteur de l'avis ou un admin peut le modifier/supprimer
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    /* ==================================
       COLLECTION: recommended_courses
    ================================== */
    match /recommended_courses/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    /* ==================================
       RÈGLE FINALE DE SÉCURITÉ
    ================================== */
    // Interdit toute lecture ou écriture qui n'a pas été explicitement autorisée ci-dessus.
    // Cette règle est cruciale pour la sécurité.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

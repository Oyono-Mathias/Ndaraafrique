
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }
    
    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }
    
    function isProfileComplete() {
        let userData = getUserData(request.auth.uid);
        return userData.isProfileComplete == true;
    }

    function isEnrolled(userId, courseId) {
      return exists(/databases/$(database)/documents/enrollments/$(userId + '_' + courseId));
    }


    // --- Collection: users ---
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // Annuaire: a user can list other users if their profile is complete and they filter by the same interest domain
      // Admins can list all users.
      allow list: if isAdmin() || (isProfileComplete() && 'careerGoals.interestDomain' in request.query.where);
      
      allow create: if isOwner(userId);
      
      allow update: if isAdmin() || (
        isOwner(userId) && 
        !('role' in request.resource.data) && 
        !('isInstructorApproved' in request.resource.data) &&
        !('status' in request.resource.data)
      );
      allow delete: if isAdmin() || isOwner(userId);

      // --- Sous-collections de 'users' ---
      match /chatHistory/{messageId} {
        allow read, write, list: if isOwner(userId);
      }
      match /wishlist/{courseId} {
        allow read, write, delete, list: if isOwner(userId);
      }
      match /notifications/{notificationId} {
        allow read, write, list: if isOwner(userId);
      }
      match /subscriptions/{subscriptionId} {
        allow read, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update: if isAdmin();
      }
       match /fcmTokens/{tokenId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId) && tokenId == request.resource.id;
      }
    }
    
    // --- Collection: courses ---
    match /courses/{courseId} {
        allow get: if resource.data.status == 'Published' 
                    || (isSignedIn() && isEnrolled(request.auth.uid, courseId))
                    || (isSignedIn() && (isOwner(resource.data.instructorId) || isAdmin()));
        allow list: if true;
        allow create: if isApprovedInstructor() || isAdmin();
        allow update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
        
        match /sections/{sectionId} {
          allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published'
                              || (isSignedIn() && isEnrolled(request.auth.uid, courseId))
                              || (isSignedIn() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
          allow create, update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
          
          match /lectures/{lectureId} {
            allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published'
                                || (isSignedIn() && isEnrolled(request.auth.uid, courseId))
                                || (isSignedIn() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
            allow create, update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
          }
        }
        
        match /assignments/{assignmentId} {
            allow read, list: if get(/databases/$(database)/documents/courses/$(courseId)).data.status == 'Published'
                                || (isSignedIn() && isEnrolled(request.auth.uid, courseId))
                                || (isSignedIn() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin()));
            allow create, update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();

            match /submissions/{submissionId} {
                allow read: if isOwner(resource.data.userId) || isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin();
                allow list: if isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin();
                allow create: if isSignedIn() && isOwner(request.resource.data.userId);
                allow update: if (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
                allow delete: if isAdmin();
            }
        }
    }

     // --- Collection: reviews ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow list: if (isSignedIn() && request.query.where.instructorId == request.auth.uid) || isAdmin();
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && (isOwner(request.resource.data.userId) || isAdmin());
    }

    // --- Collection: resources ---
    match /resources/{resourceId} {
        allow read, list: if true;
        allow create, update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(request.resource.data.courseId)).data.instructorId)) || isAdmin();
    }
    
    // --- Collection: enrollments ---
    match /enrollments/{enrollmentId} {
      allow get: if resource.data.progress == 100;
      allow list, update: if (isSignedIn() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId))) || isAdmin();
      allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
      allow delete: if isAdmin();
    }
    
    // --- Collection: payments ---
    match /payments/{paymentId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }
    
    // --- Collection: payouts ---
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow read: if isOwner(resource.data.instructorId) || isAdmin();
      allow list, update, delete: if isAdmin();
    }

    // --- Collection: support_tickets ---
    match /support_tickets/{ticketId} {
      function isTicketParticipant() {
        let ticket = get(/databases/$(database)/documents/support_tickets/$(ticketId)).data;
        return isOwner(ticket.userId) || isOwner(ticket.instructorId);
      }
      
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow get: if isSignedIn() && (isTicketParticipant() || isAdmin());
      allow update: if isSignedIn() && (isTicketParticipant() || isAdmin());
      
      // A user can list tickets where they are a participant. Admins can list all.
      allow list: if (isSignedIn() && (request.query.where.userId == request.auth.uid || request.query.where.instructorId == request.auth.uid)) 
                 || isAdmin();

      match /messages/{messageId} {
        allow create: if isSignedIn() && (isTicketParticipant() || isAdmin()) && isOwner(request.resource.data.senderId);
        allow read, list: if isSignedIn() && (isTicketParticipant() || isAdmin());
      }
    }
    
    // --- Collection: promoCodes ---
    match /promoCodes/{codeId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // --- Collection: carousel_slides ---
    match /carousel_slides/{slideId} {
        allow read, list: if true;
        allow create, update, delete: if isAdmin();
    }

    // --- Collection: subscription_plans ---
    match /subscription_plans/{planId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
    
    // --- Collection: chats ---
    match /chats/{chatId} {
      function isChatParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      allow create: if isSignedIn() 
                      && isProfileComplete()
                      && request.auth.uid in request.resource.data.participants
                      && request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1];
                      
      allow read, update: if isSignedIn() && isChatParticipant();
      allow list: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, list: if isSignedIn() && isChatParticipant();
        allow create: if isSignedIn() && isChatParticipant() && isOwner(request.resource.data.senderId);
      }
    }

    // --- Collection: faqs ---
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
      allow list: if true;
    }
    
    // --- Collection: settings ---
    match /settings/global {
      allow read: if true;
      allow write: if isAdmin();
    }
    
     // --- Collection: waitlist ---
    match /waitlist/{email} {
        allow create: if true;
        allow read, update, delete: if false;
    }


    // --- Règle par défaut ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }
    
    function isApprovedInstructor() {
      let userData = getUserData(request.auth.uid);
      return userData.role == 'instructor' && userData.isInstructorApproved == true;
    }

    function isProfileComplete() {
        let userData = getUserData(request.auth.uid);
        // Ensure careerGoals exists before trying to access interestDomain
        return userData.username != null && 'careerGoals' in userData && 'interestDomain' in userData.careerGoals;
    }
    
    // --- Collection Rules ---

    // USERS: 
    // - Admins can list pending instructors.
    // - Users can read/create their own data.
    // - Admins can update anything.
    // - Users can update their own data BUT CANNOT change their role or approval status.
    match /users/{userId} {
      allow list: if isAdmin() || (isSignedIn() && request.query.keys().hasAny(['uid']));
      allow get: if isAdmin() || isOwner(userId) || isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (isOwner(userId) && !('role' in request.resource.data) && !('isInstructorApproved' in request.resource.data));
      allow delete: if isAdmin();

      match /chatHistory/{messageId} {
        allow read, write: if isOwner(userId);
      }
      match /wishlist/{courseId} {
        allow read, write, delete: if isOwner(userId);
      }
      match /notifications/{notificationId} {
        allow read, write, list: if isOwner(userId);
      }
    }
    
    // COURSES: Admins and owners can manage courses. All can read published.
    match /courses/{courseId} {
        allow get: if true;
        allow list: if true;
        allow create: if isApprovedInstructor() || isAdmin();
        allow update, delete: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();

        match /sections/{sectionId} {
            allow read: if true;
            allow write: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
            match /lectures/{lectureId} {
                allow read: if true;
                allow write: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
            }
        }
        match /assignments/{assignmentId} {
            allow read, write: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isAdmin();
            match /submissions/{submissionId} {
                 allow read: if (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId)) || isOwner(resource.data.userId);
                 allow write: if isOwner(request.resource.data.userId) || (isSignedIn() && isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId));
            }
        }
    }
    
    // ENROLLMENTS: Admins can read all enrollments.
    match /enrollments/{enrollmentId} {
      allow create: if isOwner(request.resource.data.studentId);
      allow read, list: if isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin();
      allow update: if isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // PAYMENTS: Only admins can access payment records.
    match /payments/{paymentId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    
    // PAYOUTS: Admins manage payouts, instructors can create/read their own.
    match /payouts/{payoutId} {
      allow create: if isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow read: if isOwner(resource.data.instructorId) || isAdmin();
      allow list, update, delete: if isAdmin();
    }

    // SUPPORT_TICKETS: Users can interact with their own tickets. Admins can manage all.
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow update: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.instructorId) || isAdmin());
      allow list: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if isSignedIn() && (
          isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.userId) || 
          isOwner(get(/databases/$(database)/documents/support_tickets/$(ticketId)).data.instructorId) || 
          isAdmin()
        );
      }
    }
    
    // PROMO CODES: Only admins can manage promo codes.
    match /promoCodes/{codeId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // CAROUSEL SLIDES: Public read, admin write.
    match /carousel_slides/{slideId} {
        allow read, list: if true;
        allow create, update, delete: if isAdmin();
    }
    
    // CHATS: Users can only access chats they are a part of.
    // Creation is only allowed between users of the same interest domain.
    match /chats/{chatId} {
      allow create: if isSignedIn() 
                      && isProfileComplete()
                      && request.auth.uid in request.resource.data.participants
                      && request.resource.data.participantCategories[0] == request.resource.data.participantCategories[1];
                      
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // Default deny for any other collection not explicitly matched
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

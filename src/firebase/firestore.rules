rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE SÉCURITÉ ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'salguienow@gmail.com';
    }

    function isApprovedInstructor() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'instructor' && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isInstructorApproved == true;
    }

    function isCourseOwner(courseId) {
        return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId;
    }

    // --- ACCÈS PUBLICS (Lecture pour tous, même non connectés) ---
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /carousel_slides/{slideId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /course_templates/{templateId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      allow read: if true; 
      allow create: if isSignedIn() && (isApprovedInstructor() || isAdmin());
      allow update: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
      
      // Accès aux contenus des cours (sections, leçons, quiz)
      match /{allSubcollections=**} {
        allow read: if true; 
        allow write: if isSignedIn() && (isCourseOwner(courseId) || isAdmin());
      }
    }

    match /enrollments/{enrollmentId} {
        allow read: if true; 
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow update, delete: if isAdmin();
    }

    // --- ACCÈS RÉSERVÉS AUX MEMBRES CONNECTÉS ---

    match /users/{userId} {
      allow read: if true; 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (
        isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isInstructorApproved', 'permissions', 'status', 'email', 'uid'])
      );

      // Sous-collections PRIVÉES de l'utilisateur
      match /notifications/{id} { allow read, write: if isOwner(userId); }
      match /activity/{id} { allow read, write: if isOwner(userId); }
      match /wishlist/{id} { allow read, write: if isOwner(userId); }
      match /chatHistory/{id} { allow read, write: if isOwner(userId); }
      match /fcmTokens/{id} { allow read, write: if isOwner(userId); }
    }

    match /course_progress/{progressId} {
      allow read, write: if isSignedIn() && (request.auth.uid == request.resource.data.userId || (resource != null && request.auth.uid == resource.data.userId));
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /payments/{paymentId} {
      allow read: if isAdmin() || (isSignedIn() && (resource == null || isOwner(resource.data.userId)));
      allow list: if isAdmin() || (isSignedIn() && request.query.where.userId == request.auth.uid);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isAdmin();
    }

    match /devoirs/{submissionId} {
      allow read: if isSignedIn() && (isOwner(resource.data.studentId) || isOwner(resource.data.instructorId) || isAdmin());
      allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
      allow update: if isSignedIn();
    }

    match /questions/{qId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      
      match /messages/{msgId} {
        allow read: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants || isAdmin());
        allow create: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      }
    }

    match /support_tickets/{ticketId} {
      allow read: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId));
      allow create: if isSignedIn();
      allow update: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId));
      
      match /messages/{msgId} {
        allow read, write: if isSignedIn();
      }
    }

    match /payouts/{payoutId} {
      allow read, list: if isAdmin() || (isSignedIn() && isOwner(resource.data.instructorId));
      allow create: if isSignedIn() && isApprovedInstructor() && isOwner(request.resource.data.instructorId);
      allow update: if isAdmin();
    }

    match /promoCodes/{codeId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /security_logs/{logId} { allow read, write: if isAdmin(); }
    match /admin_audit_logs/{logId} { allow read, write: if isAdmin(); }
    match /tracking_events/{eventId} { allow create: if true; allow read: if isAdmin(); }
  }
}
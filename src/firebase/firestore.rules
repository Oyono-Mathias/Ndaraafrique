rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règle de développement : Autorise tout si l'utilisateur est connecté
    // À restreindre avant la mise en production réelle
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Accès public pour les réglages de base (Logo, Nom du site)
    match /settings/{docId} {
      allow read: if true;
    }
    
    match /carousel_slides/{slideId} {
      allow read: if true;
    }
  }
}
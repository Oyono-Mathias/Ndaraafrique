// Ce fichier doit être identique au fichier firestore.rules à la racine
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isApprovedInstructor() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'instructor' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isInstructorApproved == true;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
      match /chatHistory/{messageId} { allow read, write: if isOwner(userId); }
      match /wishlist/{courseId} { allow read, write, delete: if isOwner(userId); }
      match /notifications/{notificationId} { allow read, write, list: if isOwner(userId); }
      match /activity/{activityId} { allow read, list: if isOwner(userId); }
    }

    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if isApprovedInstructor();
      allow update: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId) || isAdmin());
      match /sections/{sectionId} {
        allow read: if true;
        allow write: if isSignedIn();
        match /lectures/{lectureId} { allow read, write: if isSignedIn(); }
      }
    }

    match /payments/{paymentId} {
      allow get: if isAdmin() || isOwner(resource.data.userId) || isOwner(resource.data.instructorId);
      allow list: if isAdmin() || (isSignedIn() && (request.query.where.userId == request.auth.uid || request.query.where.instructorId == request.auth.uid));
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isAdmin();
    }

    match /enrollments/{enrollmentId} {
        allow get: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.studentId);
        allow list: if isAdmin() || (isSignedIn() && (request.query.where.instructorId == request.auth.uid || request.query.where.studentId == request.auth.uid));
        allow update, delete: if isAdmin();
    }

    match /support_tickets/{ticketId} {
      allow read, create: if isSignedIn();
      allow update, delete: if (isSignedIn() && isOwner(resource.data.userId)) || isAdmin();
    }

    match /chats/{chatId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
    }
    
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}